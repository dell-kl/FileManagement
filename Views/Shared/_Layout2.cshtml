<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Diaf</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <style>

        body{
            background: #83aac9;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            min-height:100vh;
        }

        .spinner-border {
            --bs-spinner-width: 7rem;
            --bs-spinner-height: 7rem;
            --bs-spinner-border-width: 1.25rem;
        }

        .spinner-grow {
            --bs-spinner-width: 17rem;
            --bs-spinner-height: 16rem;
        }
    </style>
    <link href="~/css/estiloHeader.css" rel="stylesheet" />
    @RenderSection("styles", required: false)
    <link href="~/css/footer.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg" style="z-index:999;">
        <div class="container-fluid">
            <img src="~/images/LOGS.png" alt="Alternate Text" />
            <a class="navbar-brand" href="#">Sistema de Regimen</a>
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav d-flex flex-row gap-2">
                    @if (User.IsInRole("administrador"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                            href="#"
                            role="button"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                                Usuarios
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item loadingPayload" asp-controller="Usuario" asp-action="ListaUsuarios">Lista de Usuarios</a></li>
                            </ul>
                        </li>
                    }

                    @if (!User.IsInRole("logística") && !User.IsInRole("logistica administrador"))
                    {
                        <li class="nav-item">
                            <a class="nav-link loadingPayload" asp-controller="Regimens" asp-action="Index">Regimen</a>
                        </li>

                        <!--<li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                            href="#"
                            role="button"
                            data-bs-toggle="dropdown"
                            aria-expanded="false">
                                Reportes
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="~/Administrador">Regimens</a></li>
                            </ul>
                        </li>-->
                    }
                    else if (User.IsInRole("logistica administrador"))
                    {
                        <li class="nav-item px-2">
                            <a title="Gestionar Procesos Pendientes" class="nav-link loadingPayload" asp-controller="LogisticaAdmin" asp-action="Index">Panel General</a>
                        </li>
                        <li class="nav-item px-2">
                            <a title="Ver Asignaciones Realizadas" class="nav-link loadingPayload" asp-controller="LogisticaAdmin" asp-action="Asignaciones">Asignaciones</a>
                        </li>
                    }
                    else if (User.IsInRole("logística"))
                    {
                        <li class="nav-item px-2">
                            <a class="nav-link loadingPayload" asp-controller="Logistica" asp-action="Index">Panel Logistica</a>
                        </li>
                    }
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle "
                           href="#"
                           role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <strong>@User.FindFirst("Nombres")?.Value</strong>
                            <span class="fs-6">@User.Claims.ToList()[1].Value</span>
                        </a>
                        <ul class="dropdown-menu">
                            <li >
                                <a id="cerrarSesion" href="~/Formulario/Logout" class="dropdown-item">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(255, 255, 255, 1);transform: ;msFilter:;"><path d="M5 5v14a1 1 0 0 0 1 1h3v-2H7V6h2V4H6a1 1 0 0 0-1 1zm14.242-.97-8-2A1 1 0 0 0 10 3v18a.998.998 0 0 0 1.242.97l8-2A1 1 0 0 0 20 19V5a1 1 0 0 0-.758-.97zM15 12.188a1.001 1.001 0 0 1-2 0v-.377a1 1 0 1 1 2 .001v.376z"></path></svg>
                                    Cerrar Sesion
                                </a>
                            </li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
     @RenderBody()

    <div class="carga modal @ViewData["LanzarLoading"]" tabindex="-1">
        <div class="w-100 h-100" style="background-color:#fffffff7">
            <div class="d-flex align-items-center justify-content-between m-auto" style="width:45%;height:100%;">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <div class="fs-1" style="font-weight:bold;">
                    Realizando Proceso, Espere...
                </div>
            </div>
         </div>
     </div>

    <div class="carga2 modal @ViewData["LanzarLoading2"]" tabindex="-1">
        <div class="w-100 h-100" style="background-color:#fffffff7">
            <div class="d-flex align-items-center justify-content-between m-auto gap-2" style="width:50%;height:100%;">
                <div class="spinner-grow text-warning" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <div class="fs-1" style="font-weight:bold;">
                    Cargando Contenido, Espere...
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/sweetalert/sweetalert.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.min.js"></script>

    <script>
        //este script hara despegar al loading ....
        let btnLoadings = document.querySelectorAll(".loadingBtn");
        let loadingHtml = document.getElementsByClassName("carga")[0];

        
        if ( btnLoadings.length > 0 )
        {
            btnLoadings.forEach(btnLoading => {
                btnLoading.onclick = (e) => {
                    loadingHtml.classList.remove("d-none");
                    loadingHtml.classList.add("d-block");
                }
            });
        }

        //desplegar nuestro otro loading ...
        let btnLoadings2 = document.querySelectorAll(".loadingPayload");
        let loadingHtml2 = document.getElementsByClassName("carga2")[0];

        if (btnLoadings2.length > 0) { 
            btnLoadings2.forEach(btnLoading => { 
                btnLoading.onclick = (e) => { 
                    loadingHtml2.classList.remove("d-none");
                    loadingHtml2.classList.add("d-block");
                }
            });
        }

    </script>
</body>

</html>
